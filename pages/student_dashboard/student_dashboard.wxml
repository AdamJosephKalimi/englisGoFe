<!-- student dashboard -->
<view class="container">
  <view class="userinfo">
    <view>
      <!-- Create the avatar and write Welcome ({{user}} - mustache to import the current user)  -->
      <image src="{{student_img}}" class="studentAvatar"></image>
    </view>

    <text class='welcome'>{{student_name}}</text>
  </view>

  <view>
    <image id='banner' style="width: 320px; height: 148px;" src="../../image/cityBanner.png"></image>
  </view>

  <view class='assignmentIndex'>
    <!--code the assignment index as cubes (2 rows of 6) and colorcode -->
    <!--Need to code a color to overide the button which holds the
    current day's assignment.  -->
    <ul class="list-inline lessons hidden-sm hidden-xs">

      <li><button bindtap='toLessons' url="/pages/lesson/lesson" class="btn-assignments {{box1_class}}" id='box1' data-dev_id ="1" data-ass_id='{{lessons[0].id}}' hover-class="btn-assignments-hover">1</button></li>
      <li><button bindtap='toLessons' url="/pages/lesson/lesson" class="btn-assignments {{box2_class}}" id='box2' data-dev_id ="2" data-ass_id='{{lessons[1].id}}' hover-class="btn-assignments-hover">2</button></li>
      <li><button bindtap='toLessons' url="/pages/lesson/lesson" class="btn-assignments {{box3_class}}" id='box3' data-dev_id ="3" data-ass_id='{{lessons[2].id}}' hover-class="btn-assignments-hover">3</button></li>
      <li><button bindtap='toLessons' url="/pages/lesson/lesson" class="btn-assignments {{box4_class}}" id='box4' data-dev_id ="4" data-ass_id='{{lessons[3].id}}' hover-class="btn-assignments-hover">4</button></li>
      <li><button bindtap='toLessons' url="/pages/lesson/lesson" class="btn-assignments {{box5_class}}" id='box5' data-dev_id ="5" data-ass_id='{{lessons[4].id}}' hover-class="btn-assignments-hover">5</button></li>
      <li><button bindtap='toLessons' url="/pages/lesson/lesson" class="btn-assignments {{box6_class}}" id='box6' data-dev_id ="6" data-ass_id='{{lessons[5].id}}' hover-class="btn-assignments-hover">6</button></li>
    </ul>
    <ul class="list-inline lessons hidden-sm hidden-xs">
      <li><button bindtap='toLessons' url="/pages/lesson/lesson" class="btn-assignments {{box7_class}}" id='box7' data-dev_id ="7" data-ass_id='{{lessons[6].id}}' hover-class="btn-assignments-hover">7</button></li>
